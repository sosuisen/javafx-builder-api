{
    // for JavaFX CSS Support
    "css.lint.vendorPrefix": "ignore",
    "java.configuration.updateBuildConfiguration": "automatic",
    "maven.terminal.favorites": [
        {
            "command": "clean compile javafx:run -P javafx24",
            "debug": false
        },
        {
            "command": "compile -P javafx24,compile-builders",
            "debug": false
        },
        {
            "command": "assembly:single -P javafx24,controls",
            "debug": false
        },
        {
            "command": "assembly:single install -P javafx24,controls",
            "debug": false
        },
        {
            "command": "test -P javafx24",
            "debug": false
        }
    ],
    "maven.view": "flat",
    "java.dependency.packagePresentation": "hierarchical",
}